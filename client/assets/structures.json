{
    "base": {
        "prefabType": "Structure_Base",
        "properties": {
            "color": "#4a27b1",
            "title": "Player Base",
            "lcTitle": "player base",
            "desc": "Provides respawn point and generates 10% yield\n(rounded down) every minute of whatever resources\nare stored, up to maximum capacity.",
            "width": 50,
            "height": 50,
            "updateTimer": 60000,
            "updatePercentage": 0.1,
            "buildCost": {
                "energy": 500,
                "green": 50,
                "red": 20
            },
            "initialResources": {
                "energy": 0
            },
            "resourceLimits": {
                "energy": [0,10000],
                "green": [0,5000],
                "red": [0,1000],
                "purple": [0,100]
            },
            "displayData": {
                "title": {
                    "prefabType": "UI_TextListener",
                    "properties": {
                        "property": [ "displayTitle" ]
                    }
                },
                "desc": {
                    "prefabType": "UI_TextListener",
                    "properties": {
                        "property": [ "properties", "desc" ]
                    }
                },
                "structureManager": {
                    "prefabType": "UI_StructureManager",
                    "properties": {
                        "property": []
                    }
                },
                "timer": {
                    "prefabType": "UI_TextListener",
                    "properties": {
                        "signal": [ "updateSignal" ],
                        "property": [ "updateInSeconds" ],
                        "label": "\nNext resource generation in "
                    }
                },
                "energy": {
                    "prefabType": "UI_TextListener",
                    "properties": {
                        "signal": [ "resources", "onChange" ],
                        "property": [ "resources", "displayRatio", "energy" ],
                        "label": "Energy: "
                    }
                },
                "green": {
                    "prefabType": "UI_TextListener",
                    "properties": {
                        "signal": [ "resources", "onChange" ],
                        "property": [ "resources", "displayRatio", "green" ],
                        "label": "Green: "
                    }
                },
                "red": {
                    "prefabType": "UI_TextListener",
                    "properties": {
                        "signal": [ "resources", "onChange" ],
                        "property": [ "resources", "displayRatio", "red" ],
                        "label": "Red: "
                    }
                },
                "purple": {
                    "prefabType": "UI_TextListener",
                    "properties": {
                        "signal": [ "resources", "onChange" ],
                        "property": [ "resources", "displayRatio", "purple" ],
                        "label": "Purple: "
                    }
                },
                "resourceTrader": {
                    "prefabType": "UI_ResourceTrader",
                    "properties": {
                        "elementPadding": {
                            "x": 10
                        },
                        "signal": [ "resources", "onChange" ],
                        "property": [ "resources" ]
                    }
                }
            }
        }
    }
}